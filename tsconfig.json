{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}